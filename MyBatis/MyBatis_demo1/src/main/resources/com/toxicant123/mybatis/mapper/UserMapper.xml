<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toxicant123.mybatis.mapper.UserMapper">
    <!--int insertUser();-->
    <insert id="insertUser">
        insert into t_user
        values (null, '张三', '123', 23, 'm', '12345@163.com')
    </insert>

    <!-- void updateUser();-->
    <update id="updateUser">
        update t_user set username = '张三' where id = 4
    </update>

    <!--void deleteUser();-->
    <delete id="deleteUser">
        delete from t_user where id = 5
    </delete>

    <!--User getUserById();-->
    <!--
        查询功能的标签必须设置resultType或resultMap
        resultType：设置默认的映射关系
        resultMap：设置自定义的映射关系
    -->
    <select id="getUserById" resultType="com.toxicant123.mybatis.pojo.User">
        select * from t_user where id = 4;
    </select>

    <!--List<User> getAllUser();-->
    <!--在mybatis-config.xml中设置了typeAliases后，resultType可以使用类型的别名来简化开发-->
    <select id="getAllUser" resultType="user">
        select * from t_user
    </select>
</mapper>
